{% extends 'base.html.twig' %}

{% block title %}Folder{% endblock %}

{% block body %}
    <h1>Folder</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ folder.id }}</td>
            </tr>
            <tr>
                <th>SKU</th>
                <td>{{ folder.SKU }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ folder.designation }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ folder.size }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ folder.brand }}</td>
            </tr>
            <tr>
                <th>Composition</th>
                <td>{{ folder.composition }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ folder.status }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ folder.color }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ folder.type }}</td>
            </tr>
            <tr>
                <th>Picture_1</th>
                <td>{{ folder.picture1 }}</td>
            </tr>
            <tr>
                <th>Picture_2</th>
                <td>{{ folder.picture2 }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ folder.createdAt ? folder.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Exported</th>
                <td>{{ folder.exported ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('folder_index') }}">back to list</a>

    <a href="{{ path('folder_edit', {'id': folder.id}) }}">edit</a>

    {{ include('folder/_delete_form.html.twig') }}
{% endblock %}
