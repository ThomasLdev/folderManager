{% extends 'base.html.twig' %}

{% block title %}Norlog Folder Manager{% endblock %}

{% block body %}
    <div class="container-fluid h-100 pt-4">
        <div class="row p-3">
            <div class="col-12 d-flex justify-content-center align-items-center flex-column">
                <h1 class="app-title">Norlog</h1>
                <div class="form-group h-100 form-app-index">
                    <form action="{{ path('sku_search') }}" method="post">
                        <div class="input-group p-4">
                            {% if error %}
                                <script>
                                    window.alert("{{ error }}")
                                </script>
                            {% endif %}
                            <label>
                                <input type="text" name="norlogReference" class="form-control p-4 input-app-index"
                                       placeholder="Référence du dossier">
                            </label>
                            <button type="submit" class="btn btn-primary btn-app-index">Ok</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-12 d-flex flex-column justify-content-around">
                <div class="row p-3 app-action-row">
                    <div class="col-12 d-flex justify-content-evenly align-items-center">
                        <a href="{{ path('folder_list') }}" class="btn btn-primary app-btn-bloc">Lister dossiers</a>
                    </div>
                </div>
                <div class="row p-3 app-action-row">
                    <div class="col-12 d-flex justify-content-evenly align-items-center">
                        <a href="{{ path('folder_new') }}" class="btn btn-primary app-btn-bloc">Créer Dossier</a>
                    </div>
                </div>
                <div class="row p-3 app-action-row">
                    <div class="col-12 d-flex justify-content-evenly align-items-center">
                        <a href="{{ path('sku_new') }}" class="btn btn-primary app-btn-bloc">Créer Sku</a>
                    </div>
                </div>
                <div class="row p-3 app-action-row">
                    <div class="col-12 d-flex justify-content-evenly align-items-center">
                        <a href="{{ path('option_list') }}" class="btn btn-primary app-btn-bloc">Gérer Options</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
