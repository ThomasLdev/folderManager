{% extends 'base.html.twig' %}

{% block title %}Options des SKUs{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 d-flex justify-content-around align-items-center p-3">
                <a href="{{ path('app_index') }}" class="btn btn-primary display-3">Accueil</a>
                <h1 class="display-2">Gérer la liste des options</h1>
                <a href="{{ path('option_list') }}" class="btn btn-primary display-3">Gérer Options</a>
            </div>
            <hr style="height: 2px">
        </div>

        <div class="form-content">
            {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
            {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group" style="margin: 3% 0">
                {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                <button class="btn btn-primary" type="submit">{{ button_label|default('Créer') }}</button>
            </div>
            <div class="input-group" style="margin: 3% 0">

            </div>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}

            <table class="table table-striped" style="border: 1px solid #000000;">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Valeur</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for option in options|sort((a, b) => a.type <=> b.type) %}
                    <tr>
                        <td>{{ option.type }}</td>
                        <td>{{ option.value }}</td>
                        <td>
                            <a href="{{ path('option_delete', {'id': option.id}) }}"><i
                                        class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="14">Pas d'option existante</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
